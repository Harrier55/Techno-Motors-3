<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#206200EE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/promotion_title_tv"
                style="@style/TextViewPromotionTitle"
                android:layout_marginStart="16dp"
                tools:text="Title promotion"/>

            <TextView
                android:id="@+id/promotion_discount_tv"
                style="@style/TextViewPromotionDiscount"
                android:layout_marginStart="16dp"
                tools:text="discount promotion"/>

            <ImageView
                android:id="@+id/promotion_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/techno_motors_360_270"/>

            <TextView
                android:id="@+id/promotion_description_tv"
                style="@style/TextViewPromotionDescription"
                android:layout_marginStart="16dp"
                tools:text="description"/>

            <Button
                android:id="@+id/promotion_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:text="записаться"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>