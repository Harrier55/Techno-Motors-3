<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/promotion_title_tv"
                style="@style/TextViewPromotionTitle"
                android:layout_marginStart="16dp"
                tools:text="Title promotion" />

            <TextView
                android:id="@+id/promotion_discount_tv"
                style="@style/TextViewPromotionDiscount"
                android:layout_marginStart="16dp"
                tools:text="discount promotion" />

            <TextView
                android:id="@+id/promotion_description_tv"
                style="@style/TextViewPromotionDescription"
                android:layout_marginStart="16dp"
                tools:text="description" />

            <ImageView
                android:id="@+id/promotion_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/techno_motors_360_270" />



            <Button
                android:id="@+id/promotion_button"
                style="@style/Button_item_promotions"
                android:text="@string/promotion_button_text" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>