<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewPromotionTitle" parent="TextViewPrimary">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="TextViewPromotionDiscount" parent="TextViewPrimary">
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">#E91E63</item>
    </style>

    <style name="TextViewPromotionDescription" parent="TextViewPrimary">
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ContactFragmentTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewContactTitle" parent="ContactFragmentTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>

    </style>

    <style name="TextViewContactDescription" parent="ContactFragmentTextView">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>


</resources>