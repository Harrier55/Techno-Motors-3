<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
// Стиль на экран  Акции
    <style name="TextViewPromotionHeader" parent="TextViewPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewPromotionTitle" parent="TextViewPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="TextViewPromotionDiscount" parent="TextViewPrimary">
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextViewPromotionDescription" parent="TextViewPrimary">
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">14sp</item>
    </style>

// Стиль экрана Контакты
    <style name="ContactFragmentTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewContactTitle" parent="ContactFragmentTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="TextViewContactDescription" parent="ContactFragmentTextView">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

// Кнопка Action_button с красным ободком. Для всего приложения
    <style name="Action_button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textSize">12sp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/red</item>
    </style>


</resources>